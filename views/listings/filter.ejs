<% layout("/layout/boilerplate") %>
<br />
<h2>filtered listing of your chocie</h2>

<% if (filterListings) { %>
<div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3">
  <% for( let filteredlisting of filterListings) { %>
  <a href="/listings/<%= filteredlisting._id %>" class="listing-link">
    <div class="card col listing-card">
      <img
        src="<%= filteredlisting.image.url %>"
        class="card-img-top"
        alt="listing_image"
        style="height: 15rem"
      />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b> <%= filteredlisting.title %></b>
          <br />
          <%= filteredlisting.price.toLocaleString("en-IN", { style:"currency",
          currency:"INR" } ) %>/ Night
          <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
        </p>
      </div>
    </div>
  </a>

  <% } %> <% } %>
</div>
